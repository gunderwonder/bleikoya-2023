        }
    },
    "require": {
        "phpoffice/phpspreadsheet": "^3.6",
        "sentry/sentry": "^4.0",
        "monolog/monolog": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.6",
        "google/apiclient": "^2.15"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
